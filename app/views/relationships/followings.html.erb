<h2>Follow Users</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @users.exists? %>
     <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
         <td>フォロー数: <%= user.followings.count %></td>
         <td>フォロワー数: <%= user.followers.count %></td>
         <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
  </tbody>
</table>
     <% end %>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>
